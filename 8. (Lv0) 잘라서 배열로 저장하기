import java.util.Arrays;
import java.nio.ByteBuffer;
//import org.apache.commons.lang3.ArrayUtils;

class Solution {
    public String[] solution(String my_str, int n) {
        String[] answer = {};
        String[] answer1 = my_str.split("");
        StringBuffer Bytebuffer=new StringBuffer();
        
        for(int  i=0;i<n;i++){
            do{
                Bytebuffer.append(answer1[i]);
            }while(i%n!=0);
                
            answer[i/n]=Bytebuffer.toString();
            //Bytebuffer.put(answer[])
            //answer[i/n]=ArrayUtils.addAll(answer[i/n],answer1[i]);
        }
        
        return answer;
    }
}
